<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bulbdialogview"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_column="2"
    tools:context="cnit325project.bulbappsaur.BulbDialog">

    <TableRow>

        <TextView
            android:id="@+id/txtred"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Red:"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/etred"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight=".05"
            android:hint="(0-255)"
            android:inputType="number|phone"
            android:textSize="24sp" />
    </TableRow>

    <TableRow>

        <TextView
            android:id="@+id/txtgreen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Green:"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/etgreen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight=".05"
            android:hint="(0-255)"
            android:inputType="number|phone"
            android:textSize="24sp" />
    </TableRow>

    <TableRow>

        <TextView
            android:id="@+id/txtblue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Blue:"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/etblue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight=".05"
            android:hint="(0-255)"
            android:inputType="number|phone"
            android:textSize="24sp" />
    </TableRow>

    <TableRow>

        <TextView
            android:id="@+id/txtstatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Status:"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/etstatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight=".05"
            android:hint="(On-Off)"
            android:inputType="text"
            android:textSize="24sp" />
    </TableRow>

    <TableRow>

        <TextView
            android:id="@+id/txtbrightness"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Brightness:"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/etbrightness"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight=".05"
            android:hint="(0-100)"
            android:inputType="number|phone"
            android:textSize="24sp" />
    </TableRow>

    <TableRow>

        <Button
            android:id="@+id/btnok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight=".5"
            android:padding="5dp"
            android:text="OK" />

        <Button
            android:id="@+id/btncancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight=".5"
            android:padding="5dp"
            android:text="Cancel" />
    </TableRow>

</TableLayout>
